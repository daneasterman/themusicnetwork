<h1>Your songs</h1>

<table>
  <thead>
    <tr>
      <th>Art</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'New Song', new_song_path %>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= image_tag song.song_image.url, size: "100" %></td>
        <td><%= song.name %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

