<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :song_audio %><br>
    <%= f.file_field :song_audio %>
  </div>

  <div class="field">
    <%= f.label :song_image %><br>
    <%= f.file_field :song_image %>
  </div>
 
  <div>
      <%= f.label :remote_song_image_url %>
      <%= f.text_field :remote_song_image_url %>
  </div>

   <div class="field">
     <%= f.collection_check_boxes :playlist_ids, Playlist.all, :id, :name do |b| %>
       <%= b.check_box + b.label { b.text } %><br>
     <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
