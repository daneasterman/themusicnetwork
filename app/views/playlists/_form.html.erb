<%= form_for(@playlist) do |f| %>
  <% if @playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
      <% @playlist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
     <% Song.all.each do |song| %>
       <%= check_box_tag "playlist[songs_ids][]", song.id, @playlist.songs.include?(song), id: "playlist_song_ids_#{song.id}" %>
       <%= f.label :song_ids, song.name, for: "playlist_song_ids_#{song.id}" %>
       <br>
     <% end %>
  </div> 

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
